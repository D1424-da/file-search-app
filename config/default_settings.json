{
  "search": {
    "max_results": 1000,
    "search_timeout": 30,
    "case_sensitive": false,
    "whole_word": false
  },
  "indexing": {
    "auto_index": true,
    "index_interval": 3600,
    "max_file_size": 10485760,
    "index_folder": "index_data",
    "supported_extensions": [
      ".txt",
      ".docx",
      ".xlsx",
      ".pdf",
      ".xml",
      ".tif",
      ".tiff"
    ]
  },
  "ui": {
    "theme": "light",
    "language": "ja",
    "window_width": 1200,
    "window_height": 800
  },
  "logging": {
    "level": "INFO",
    "max_file_size": 10485760,
    "backup_count": 5
  }
}